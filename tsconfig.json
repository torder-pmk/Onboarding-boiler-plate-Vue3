{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["kakao.maps.d.ts", "node", "vite/client"],
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@apis": ["src/apis"],
      "@apis/*": ["src/apis/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@codecs": ["src/codecs"],
      "@codecs/*": ["src/codecs/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@composables": ["src/composables"],
      "@composables/*": ["src/composables/*"],
      "@containers": ["src/containers"],
      "@containers/*": ["src/containers/*"],
      "@interface": ["src/interface"],
      "@interface/*": ["src/interface/*"],
      "@layouts": ["src/layouts"],
      "@layouts/*": ["src/layouts/*"],
      "@router": ["src/router"],
      "@router/*": ["src/router/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@utils*": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@views": ["src/views"],
      "@views/*": ["src/views/*"],
      "@common": ["src/common"],
      "@common/*": ["src/common/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/interface/custom.d.ts",
  ],
  "exclude": ["dist", "node_modules"],
}
